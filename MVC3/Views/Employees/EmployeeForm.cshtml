@model MVC3.Models.Employee

@{
    ViewBag.Title = ViewBag.Action + "Employee";
}

<br />
<h2>@ViewBag.Action Employee</h2>
<hr />
<div class="row">
    <div class="col-md-4">

        @using (@Html.BeginForm())
        {
            <div class="form-group">
                <label for="Name">Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Salary">Salary</label>
                @Html.TextBoxFor(m => m.Salary, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Salary, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Gender">Gender</label>
                @Html.EnumDropDownListFor(m => m.Gender, "Select Gender", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Gender, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })
            </div>
            <input type="submit" value="@ViewBag.Action" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", "Employees", null, new { @class = "btn btn-secondary" })

        }

    </div>
</div>

@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
