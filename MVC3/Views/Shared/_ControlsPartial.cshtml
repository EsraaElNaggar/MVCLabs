@model int?

    <div class="btn-group" role="group" aria-label="Basic example">
        <a href="@Url.Action("Details",new { id = Model })" class="btn btn-primary" >
            <i class="far fa-eye"></i>
        </a>
        <a href="@Url.Action("Edit",new { id = Model })" class="btn btn-success" >
            <i class="far fa-edit"></i>
        </a>
        <button class="btn btn-danger btn-sm" onclick="confirmDelete(@Model)">
            <i class="far fa-trash-alt"></i>
        </button>
        @*<a href="@Url.Action("Delete",new { id = Model })" class="btn btn-danger" >
        </a>*@
    </div>


